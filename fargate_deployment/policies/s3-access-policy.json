{
  "Version": "2012-10-17",
  "Statement": [
    { "Effect": "Allow",
      "Action": ["s3:ListBucket"],
      "Resource": "arn:aws:s3:::medical-note-llm"
    },
    { "Effect": "Allow",
      "Action": ["s3:GetObject"],
      "Resource": "arn:aws:s3:::medical-note-llm/Input/*"
    },
    { "Effect": "Allow",
      "Action": ["s3:PutObject"],
      "Resource": [
        "arn:aws:s3:::medical-note-llm/Output/*",
        "arn:aws:s3:::medical-note-llm/audit_logs/*"
      ]
    }
  ]
}
